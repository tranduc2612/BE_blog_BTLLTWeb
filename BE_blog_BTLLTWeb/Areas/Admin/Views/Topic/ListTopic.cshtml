@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BE_blog_BTLLTWeb.Models
@{
    ViewData["Title"] = "ListTopic";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<Category>
<div class="container mt-5">
	<div class="current_page d-flex align-items-center mb-4">
		<i class="nav-icon fa-sharp fa-solid fa-tag me-2 fs-4"></i>
		<h2>Topic</h2>
	</div>
	<form asp-action="Add" asp-controller="Topic" asp-area="Admin" method="post" class="mb-4" enctype="multipart/form-data">
		<label for="topicname"><h5>Topic Name</h5></label>
		<div class="form-group d-flex mb-4" style="width: 60%">
			<input id="name"
				   class="form-control me-2"
				   type="text"
				   name="namecategory" />
		</div>

		<label for="topicname"><h5>Topic Image</h5></label>
		<div class="form-group d-flex" style="width: 60%">
			<input id="name" class="form-control me-2" type="file" name="image" />
		</div>

		<button class="btn btn-primary mt-3">Add</button>

	</form>
	<span style="color:#539165">@TempData["Message"]</span>
	<div class="table-responsive">
		<table class="table table-hover">
			<thead class="table-dark">
				<tr>
					<th scope="col">#</th>
					<th scope="col">Topic Type</th>
					<th scope="col">Topic Image</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<th scope="row">@item.IdCategory</th>
						<td>@item.NameCategory</td>
						<td><img src="@item.Img" width="100" height="100"/></td>
						<td>
							<a class="nav-link" asp-action="Delete" asp-controller="Topic" asp-route-id="@item.IdCategory" asp-area="Admin" class="me-2 btn text-warning">Delete</a>
							
							<a class="nav-link" asp-action="Update" asp-controller="Topic" asp-route-id="@item.IdCategory" asp-area="Admin" class="me-2 btn text-warning">Update</a>
						</td>
					</tr>
				}
			
			
			</tbody>
		</table>
	</div>
</div>
