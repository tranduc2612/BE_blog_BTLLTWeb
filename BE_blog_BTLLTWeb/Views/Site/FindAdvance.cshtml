
@{
    ViewData["Title"] = "FindAdvance";
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";
}
@model List<Category>
			<!-- end s-header -->

			<div class="s-content">
				<header class="listing-header">
					<h1 class="h2">Find Advance</h1>
				</header>

				<div class="advance__form">
		<form method="get" asp-action="FindAdvanceResult" asp-controller="Site">
						<div class="advance__form-field">
							<label class="advance__form-title" for="">Topics</label>
							<ul class="topic__list">
					@foreach(var item in Model)
					{
						<li class="topic__list-item">
									<label class="btn btn--stroke label__topic" for="@item.NameCategory"
										>@item.NameCategory</label
									>
									<input
										class="checkbox__topic"
										id="@item.NameCategory"
										type="checkbox"
										name="topic"
										value="@item.IdCategory"
									/>
								</li>
					}
							</ul>
						</div>

						<div class="advance__form-field">
							<label class="advance__form-title" for="rangeDate"
								>Search for date:</label
							>
							<input
								class="full-width"
								type="text"
								id="rangeDate"
								placeholder="Please select Date Range"
								data-input
								name="date"
							/>
						</div>

						<div class="advance__form-field">
							<label class="advance__form-title" for="name-post"
								>Search for name post:</label
							>
							<input
								name="namepost"
								class="full-width"
								type="text"
								placeholder="Enter name post"
							/>
						</div>

						<div class="advance__form-field">
							<label class="advance__form-title" for="author-post"
								>Search for author post</label
							>
							<input
								name="authorpost"
								class="full-width"
								type="text"
								placeholder="Enter name author"
							/>
						</div>
						<input
							style="margin-top: 5rem"
							name="submit"
							id="submit"
							class="btn btn--stroke btn-wide btn--large full-width"
							value="Find Advance"
							type="submit"
						/>
					</form>
				</div>
			</div>
			<!-- end s-content -->

			<!-- footer
        ================================================== -->
		@section findadvance{
			<script src="../js/create_post.js"></script>
		}

