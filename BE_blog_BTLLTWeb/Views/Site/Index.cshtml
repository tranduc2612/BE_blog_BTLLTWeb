
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";
}

<div class="s-content">
				<header class="listing-header">
					<h1 class="h2">Home</h1>
				</header>

				<div class="content__slide">
					<div
						style="
							display: flex;
							justify-content: space-between;
							align-items: center;
							margin-bottom: 3rem;
						"
					>
						<h3 class="content__slide-title">Popular Post</h3>
						<div class="content__slide-navigation">
							<button class="btn--slider slider-prev-rank">
								<i class="fa-solid fa-chevron-left"></i>
							</button>
							<button class="btn--slider slider-next-rank">
								<i class="fa-solid fa-chevron-right"></i>
							</button>
						</div>
					</div>

					<div class="slider-rank">

							@foreach (var item in ViewBag.listpopular)
							{
						<div class="masonry-slider" style="width: 100%; height: 100%">
							<article
								class="masonry__brick entry format-standard animate-this"
								style="width: 100%"
							>
								<div class="entry__thumb">
							<a href="/Post/DetailPost?IdBlog=@item.IdBlog" class="entry__thumb-link">
										<img
											src="@item.Image"
											style="height: 400px"
											alt="Error image"
										/>
									</a>

									<div class="slider__info">
										<span class="slider__info-title">
									<a class="slider__info-link" href="/Post/DetailPost?IdBlog=@item.IdBlog">
												@item.Title
											</a></span
										>
										<div class="entry__meta">
											<span class="entry__meta-cat">
										@foreach(var namecategory in item.NameCategory)
										{
											<a href="#">@namecategory</a>
										}
									</span>
											<span class="entry__meta-date">
										<a href="/Post/DetailPost?IdBlog=@item.IdBlog">@item.CreateTime</a>
											</span>
										</div>
										<div class="entry__excerpt">
									<a class="slider__info-link" href="/Post/DetailPost?IdBlog=@item.IdBlog">
												@item.Author
											</a>
										</div>
									</div>
								</div>
							</article>
						</div>
				
							}
					</div>

					<div>
						<div
							style="
								display: flex;
								justify-content: space-between;
								align-items: center;
								margin-bottom: 3rem;
							"
						>
							<h3 class="content__slide-title">Topic Post</h3>
							<div class="content__slide-navigation">
								<button class="btn--slider slider-prev-topic">
									<i class="fa-solid fa-chevron-left"></i>
								</button>
								<button class="btn--slider slider-next-topic">
									<i class="fa-solid fa-chevron-right"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="slider-topic">
			@foreach(var item in ViewBag.listcategory)
			{
			<div class="masonry-slider" style="width: 100%; height: 100%">
							<article
								class="masonry__brick entry format-standard animate-this"
								style="width: 100%"
							>
								<div class="entry__thumb">
							<a href="/Post/Category?type=@item.IdCategory" class="entry__thumb-link">
										<img
											src="@item.Img"
											style="height: 400px"
											alt="Error image"
										/>
									</a>
									<div
										class="slider__info"
										style="text-align: center; top: 25%"
									>
								<span class="slider__info-topic"><a href="/Post/Category?type=@item.IdCategory">@item.NameCategory</a></span>
									</div>
								</div>
							</article>
						</div>
				
			}

					</div>
				</div>
			</div>
			<!-- end s-content -->

